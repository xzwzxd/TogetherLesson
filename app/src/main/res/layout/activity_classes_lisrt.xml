<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ddd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#f8f8f8"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#f8f8f8"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/ly_address_classes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_address_classes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人气排序"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/img_address_classes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/point_bottom_gray" />
            </LinearLayout>
            <View
                android:layout_gravity="center_vertical"
                android:layout_width="1dp"
                android:layout_height="18dp"
                android:background="#ddd"/>
            <LinearLayout
                android:id="@+id/ly_choose_classes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_choose_classes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="筛选"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/img_choose_classes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/point_bottom_gray" />
            </LinearLayout>
            <View
                android:layout_gravity="center_vertical"
                android:layout_width="1dp"
                android:layout_height="18dp"
                android:background="#ddd"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="筛选"
                    android:textColor="#000000" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/point_bottom_gray" />
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_gravity="center_vertical"
            android:layout_width="1dp"
            android:layout_height="18dp"
            android:background="#ddd"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp2"
        android:background="#ddd"/>
    <com.qianchang.togetherlesson.widget.XListView
        android:id="@+id/pullLoadMoreRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>