<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.qianchang.togetherlesson.utils.RoundedImageView
            android:id="@+id/item_img_find"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_margin="25px"
            android:src="@mipmap/ic_launcher"
            app:border_color="#fff"
            app:border_width="3dp"
            app:corner_radius="10dip"
            app:mutate_background="true"
            app:oval="true" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="35px"
                android:layout_marginTop="60px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="sdsds"
                    android:textColor="#111"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/item_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="26px"
                    android:text="sdsds"
                    android:textColor="#111"
                    android:textSize="30px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.qianchang.togetherlesson.utils.MyGridView
                android:id="@+id/mygrid_beighbourhood"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:horizontalSpacing="10dp"
                android:numColumns="3"
                android:verticalSpacing="10dp" />

            <TextView
                android:id="@+id/tv_neighbourhood_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25px"
                android:text="经营范围："
                android:textColor="#111"
                android:textSize="25px" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="25px"
                android:layout_marginTop="35px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#111"
                    android:textSize="30px" />


                <ImageView
                    android:id="@+id/img_comment"
                    android:layout_width="55px"
                    android:layout_height="40px"
                    android:layout_marginRight="20px"
                    android:src="@mipmap/no_comment"
                    />

                <TextView
                    android:id="@+id/item_tv_comment_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="35px"
                    android:text="sdsds"
                    android:textColor="#111"
                    android:textSize="30px" />
            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>
    </LinearLayout>

</LinearLayout>