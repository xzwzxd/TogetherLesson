<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="addPic">
        <attr name="row_size" format="integer" />
        <attr name="max_size" format="integer" />
        <attr name="child_padding" format="dimension" />
    </declare-styleable>

    <declare-styleable name="PraiseListView">
        <attr name="item_color" format="color"/>
        <attr name="item_selector_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="ExpandTextView">
        <attr name="showLines" format="integer"/>
    </declare-styleable>

    <declare-styleable name="RoundedImageView">
        <attr name="corner_radius" format="dimension" />
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="mutate_background" format="boolean" />
        <attr name="oval" format="boolean" />
        <attr name="android:scaleType" />
    </declare-styleable>

    <declare-styleable name="SwipeRefreshLayout">
        <attr name="direction">
            <enum name="top" value="0" />
            <enum name="bottom" value="1" />
            <enum name="both" value="2" />
        </attr>
    </declare-styleable>
    <declare-styleable name="FZTVStay">
        <attr name="isBold" format="boolean" />
    </declare-styleable>
</resources>